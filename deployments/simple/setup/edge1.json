{
    "global-properties":{
        "type": "edge",
        "label": "edge1",
        "window-size": 100,
        "comms":{
            "opal-udp": {
                "protocol": "udp",
                "sensors": {
                    "ip": "0.0.0.0",
                    "port": "10102"
                }
            },
            "opal-tcp": {
                "protocol": "tcp",
                "sensors": {
                    "ip": "0.0.0.0",
                    "port": "20102"
                },
                "actuators": {
                    "ip": ["$LOCAL_IP", "localhost"],
                    "port": "30102"
                }
            }
        },
        "geo-data": {
            "position": {
                "x": 2.1153889,
                "y": 41.389917
            },
            "connections": []
        }
    },
    "devices": [
        {
            "label": "Ammeter Gen1",
            "driver": "es.bsc.hp2c.edge.opalrt.OpalAmmeter",
            "driver-dt": "es.bsc.hp2c.server.device.VirtualAmmeter",
            "position": {
                "x":20,
                "y":40
            },

            "properties": {
                "comm-type": "opal-udp",
                "indexes": [0],
                "amqp-aggregate": "phasor",
                "amqp-agg-args": {
                    "phasor-freq": 10
                }
            }
        },
        {
            "label": "Three-Phase Switch Gen1",
            "driver": "es.bsc.hp2c.edge.opalrt.OpalSwitch",
            "driver-dt": "es.bsc.hp2c.server.device.VirtualSwitch",
            "position": {
                "x":0,
                "y":0
            },
            "properties": {
                "comm-type": "opal-tcp",
                "indexes": [0,1,2],
                "amqp-aggregate": "last",
                "amqp-trigger": "onFrequency",
                "amqp-frequency": 4
            }
        },
        {
            "label": "Voltmeter Gen1",
            "driver": "es.bsc.hp2c.edge.opalrt.OpalVoltmeter",
            "driver-dt": "es.bsc.hp2c.server.device.VirtualVoltmeter",
            "position": {
                "x":20,
                "y":40
            },
            "properties": {
                "comm-type": "opal-udp",
                "indexes": [1],
                "window-size": 5,
                "amqp-aggregate": "phasor"
            }
        },
        {
            "label": "Generator Gen1",
            "driver": "es.bsc.hp2c.edge.opalrt.OpalGenerator",
            "driver-dt": "es.bsc.hp2c.server.device.VirtualGenerator",
            "position": {
                "x":0,
                "y":0
            },
            "properties": {
                "comm-type": "opal-tcp",
                "indexes": [3,4]
            }
        }
    ],

    "funcs":[
        {
            "label": "Fibonacci",
            "lang": "Python",
            "method-name": "es.bsc.hp2c.common.utils.PythonFunc",
            "parameters": {
                "sensors": ["Voltmeter Gen1"],
                "actuators": ["Three-Phase Switch Gen1"],
                "other": {
                    "module_name": "fibonacci",
                    "n": 10
                }
            },
            "trigger": {
                "type": "onRead",
                "parameters": {
                    "trigger-sensor": ["Voltmeter Gen1"],
                    "interval": 1
                }
            }
        },
        {
            "label": "VoltLimitation",
            "lang": "Java",
            "method-name": "es.bsc.hp2c.edge.funcs.VoltLimitation",
            "parameters": {
                "sensors": ["Voltmeter Gen1"],
                "actuators": ["Three-Phase Switch Gen1"],
                "other": {
                    "threshold": 200
                }
            },
            "trigger": {
                "type": "onRead",
                "parameters": {
                    "trigger-sensor": ["Voltmeter Gen1"],
                    "interval": 5
                }
            }
        },
        {
            "label": "CalcPower",
            "lang": "Java",
            "method-name": "es.bsc.hp2c.edge.funcs.CalcPower",
            "parameters": {
                "sensors": ["Voltmeter Gen1", "Ammeter Gen1"],
                "actuators": [],
                "other": {}
            },
            "trigger": {
                "type": "onFrequency",
                "parameters": {
                    "frequency": 2
                }
            }
        }
    ]
}
